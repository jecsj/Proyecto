<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoverde"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MenoUsuario">

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#ffff">

        <TextView
            android:id="@+id/txtDireccion"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="TextView"
            android:textColor="#FFFFFF"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="31dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#ffff">

        <TextView
            android:id="@+id/txtEstado"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Estado"
            android:textColor="#FFFFFF"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="31dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout

        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#ffff">

        <TextView
            android:id="@+id/txtProbabilidad"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Probabilidad"
            android:textColor="#FFFFFF"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="31dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editText_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="#ffff"
        >


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter CC/NIT"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button

        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/editbox_background"
        android:text="GUARDAR"
        android:textColor="#E91E63"
        android:textColorLink="#FFFFFF"
        android:textSize="10sp" />

    <Button

        android:id="@+id/btnTraerestado"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/editbox_background"
        android:text="Estado"
        android:textColor="#E91E63"
        android:textColorLink="#FFFFFF"
        android:textSize="10sp" />

    <Button

        android:id="@+id/btnTraerprobabilidad"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/editbox_background"
        android:text="Probabilidad"
        android:textColor="#E91E63"
        android:textColorLink="#FFFFFF"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/etLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Sintomas"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#9C27B0"></EditText>
    <Button
        android:id="@+id/btnAgregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anadir Sintoma" >

    </Button>
    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar Sintomas" >

    </Button>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#9C27B0">
        ></ListView>

</LinearLayout>